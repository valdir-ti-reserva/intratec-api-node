{
  "openapi": "3.0.0",
  "info": {
    "title": "Intratec API",
    "description": "General simulate CRM",
    "termsOfService": "",
    "contact": {
      "email": "valdir.ti@gmail.com"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "API test"
    },
    {
      "url": "https://intratec-api-node.herokuapp.com/",
      "description": "API production on Heroku"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "summary": "Initial route",
        "description": "Initial route to test the app",
        "tags": ["Intial App Route"],
        "requestBody": {
          "content": {
            "application/json": {}
          }
        },
        "responses": {
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    },
    "/login": {
      "post": {
        "summary": "Authenticate User",
        "description": "Responsable to login the user",
        "tags": ["Login"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              },
              "examples": {
                "user": {
                  "value": {
                    "email": "john@mail.com",
                    "password": "12345"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Incorrect email"
          },
          "400": {
            "description": "Email/Password incorrect"
          },
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "description": "The user token"
                }
              }
            }
          }
        }
      }
    },
    "/users": {
      "get": {
        "summary": "List users",
        "description": "Responsable to list users",
        "tags": ["List Users"],
        "requestBody": {
          "content": {
            "application/json": {}
          }
        },
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "401": {
            "description": "Token missing"
          },
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "items": {
                    "$ref": "#/components/schemas/Token"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create user",
        "description": "Responsable to create a user",
        "tags": ["Users"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              },
              "examples": {
                "user": {
                  "value": {
                    "name": "John Doe",
                    "email": "john@mail.com",
                    "password": "1234",
                    "admin": true
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "User already exists"
          },
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "items": {
                    "$ref": "#/components/schemas/User"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/tags": {
      "get": {
        "summary": "List tags",
        "description": "Responsable to list tags",
        "tags": ["List Tags"],
        "requestBody": {
          "content": {
            "application/json": {}
          }
        },
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "401": {
            "description": "Token missing"
          },
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "items": {
                    "$ref": "#/components/schemas/Tag"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create tag",
        "description": "Responsable to create a tag",
        "tags": ["Tags"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Tag"
              },
              "examples": {
                "tag": {
                  "value": {
                    "name": "Future"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Tag already exists"
          },
          "401": {
            "description": "Token missing"
          },
          "401": {
            "description": "Unauthorized"
          },
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "items": {
                    "$ref": "#/components/schemas/Tag"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "email": { "type": "string" },
          "password": { "type": "string" },
          "admin": { "type": "boolean" }
        }
      },
      "Token": {
        "type": "object",
        "properties": {
          "token": { "type": "string" }
        }
      },
      "Tag": {
        "type": "object",
        "properties": {
          "name": { "type": "string" }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
