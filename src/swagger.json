    "/login": {
      "post": {
        "summary": "Authenticate User",
        "description": "Responsable to login the user",
        "tags": ["Login"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              },
              "examples": {
                "user": {
                  "value": {
                    "email": "john@mail.com",
                    "password": "12345"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Incorrect email"
          },
          "400": {
            "description": "Email/Password incorrect"
          },
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "description": "The user token"
                }
              }
            }
          }
        }
      }
    },
